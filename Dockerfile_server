# Base image
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Copy requirements (agar tumhare paas ek separate requirements.txt hai)
COPY requirements.txt .

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy server code
COPY server.py .

# Expose port if needed (ye server script directly run kar raha hai, mostly background)
# EXPOSE 5000

# Command to run
CMD ["python", "server.py"]
